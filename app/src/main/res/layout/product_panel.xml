<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorWhite"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginBottom="4dp"
    android:id="@+id/relative_layout_panel_product">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:contextClickable="true"
        android:id="@+id/panel_card_view_product">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/panel_image_view_product"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/panel_text_view_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="6dp"
                android:singleLine="true"
                android:text="TextView Title"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.100000024" />

            <TextView
                android:id="@+id/panel_text_view_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="6dp"
                android:singleLine="true"
                android:text="Price"
                android:textColor="#000000"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.01999998" />

            <TextView
                android:id="@+id/panel_text_view_product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/panel_text_view_product_title"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:layout_toRightOf="@id/panel_image_view_product"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="2"
                android:padding="3dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/panel_image_view_product"
                app:layout_constraintTop_toBottomOf="@+id/panel_text_view_product_title"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/panel_button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="#FFE500"
                android:text="Done"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/panel_table_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table 17"
        android:textColor="#000000"
        android:textSize="17sp"
        android:paddingLeft="6dp"
        android:paddingTop="4dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/panel_date_hour_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19:03 -- 28/02/2020"
        android:textColor="#000000"
        android:textSize="17sp"
        android:paddingRight="6dp"
        android:paddingTop="4dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>